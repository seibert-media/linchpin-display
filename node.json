{
    "name": "Linchpin",
    "permissions": {
        "network": "Needs to fetch linchpin news feed"
    },
    "optional": [
        ".gitignore",
        "COPYRIGHT",
        "README.md",
        "doc/output.png",
        "doc/settings.png"
    ],
    "options": [
        {
            "type": "section",
            "title": "Your Linchpin Instance"
        },
        {
            "title": "URL (without trailing slash)",
            "ui_width": 12,
            "name": "base_url",
            "type": "string",
            "default": "https://demonstration.linchpin-intranet.com"
        },
        {
            "title": "Username",
            "ui_width": 4,
            "name": "username",
            "type": "string",
            "default": "tschroeder"
        },
        {
            "title": "Password",
            "ui_width": 4,
            "name": "password",
            "type": "string",
            "default": "tschroeder"
        },
        {
            "title": "Insecure SSL",
            "ui_width": 4,
            "name": "ssl_no_verify",
            "type": "boolean",
            "default": false,
            "hint": "Do not verify SSL certificates when doing requests"
        },
        {
            "type": "section",
            "title": "Feed to display"
        },
        {
            "title": "Feed",
            "ui_width": 5,
            "name": "feed",
            "type": "select",
            "options": [
                ["personal", "Personal News Feed"],
                ["corporate", "Corporate News Feed"]
            ],
            "default": "corporate"
        },
        {
            "title": "Items",
            "ui_width": 4,
            "name": "item_count",
            "type": "integer",
            "default": 10,
            "hint": "Number of Items to display",
            "ui_spacing": 3
        },
        {
            "title": "Query",
            "ui_width": 12,
            "name": "additional_query",
            "type": "string",
            "default": "",
            "hint": "Additional query parameters (JSON, parameter 'config' in request)"
        },
        {
            "type": "section",
            "title": "Display Options"
        },
        {
            "title": "Font",
            "ui_width": 6,
            "name": "font",
            "type": "font",
            "default": "silkscreen.ttf"
        },
        {
            "title": "Display Duration",
            "ui_width": 3,
            "name": "duration",
            "type": "integer",
            "default": 10,
            "hint": "How long should each news entry be shown"
        },
        {
            "title": "Show excerpt",
            "ui_width": 3,
            "name": "show_excerpt",
            "type": "boolean",
            "default": false
        },
        {
            "title": "info line",
            "ui_width": 12,
            "name": "infoline_formatstring",
            "type": "string",
            "default": "{author} - {date} - {likes_and_comments}",
            "doc_link": true
        },
        {
            "title": "maximum image scale factor",
            "ui_width": 4,
            "name": "max_image_scale_factor",
            "type": "select",
            "options": [
                [1, "1x (do not scale up)"],
                [2, "2x (double size)"],
                [3, "3x (triple size)"],
                [9999, "unlimited (scale all images)"]
            ],
            "default": 1
        },
        {
            "type": "section",
            "title": "Logo / Corona-Warn-App"
        },
        {
            "title": "Type",
            "ui_width": 5,
            "name": "logo_type",
            "type": "select",
            "options": [
                ["none", "None"],
                ["logo", "Logo"],
                ["cwa", "QR Code for Corona-Warn-App"]
            ],
            "default": "logo"
        },
        {
            "title": "Logo",
            "ui_width": 7,
            "name": "logo",
            "type": "resource",
            "valid": ["image"],
            "default": "linchpin.png",
            "hint": "Displayed in uploaded size in the top right corner (no scaling)"
        },
        {
            "title": "Location",
            "ui_width": 7,
            "name": "qr_description",
            "type": "string",
            "default": "Some Company",
            "hint": "Your Location"
        },
        {
            "title": "Default Check-In Time (Hours)",
            "ui_width": 5,
            "name": "qr_checkin_time",
            "type": "integer",
            "default": 8
        }
    ]
}
